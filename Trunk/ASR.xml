<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <LockedItems>
    <FormPage Height="250px">

      <CodeBeside Type="ASR.ASR,ASR"/>

      <GridPanel class="scBackground" vAlign="top" Height="100%" Width="100%" Cellpadding="0">

        <Toolbar ID="MyToolbar">
            <Toolbutton ID="ExecuteFilter" visible="false"/>

            <Toolbutton ID="CommandButton" visible ="false"/>
            <Toolbutton ID="CommandAllButton" visible ="false"/>
            <Tooldivider />
           
            <Toolbutton ID="SourceItem" Header="Select Source" Icon="Database/32x32/view_h.png"/>
            <Tooldivider />
            <Toolbutton ID="ReportButton" Header="Select Report" Icon="Software/32x32/branch_element.png"/>
          </Toolbar>



        <GridPanel Width="100%" Height="100%" Columns="3" GridPanel.Height="100%" Style="table-layout:fixed">

          <Scrollbox Height="100%" Width="100%" Padding="0">
            <Listview ID="ItemList" View="Details" Background="white">
              <ListviewHeader>
                <ListviewHeaderItem Name="path" Header="Path" />
                <ListviewHeaderItem Name="user" Header="User" />
                <ListviewHeaderItem Name="lang" Header="Language" />
                <ListviewHeaderItem Name="version" Header="Version" />
                <ListviewHeaderItem Name="date" Header="Locked" />
              </ListviewHeader>
            </Listview>
            
          </Scrollbox>


        </GridPanel>
        <Border Background="white">
          <Space/>
        </Border>
        <Border Height="22" GridPanel.Height="22" Background="#e9e9e9">
          <GridPanel Columns="2" Width="100%" Height="100%" CellPadding="2">
            <Border Border="1px inset" Padding="2" Height="100%">
              <Literal ID="Status"/>
            </Border>
          </GridPanel>
        </Border>

      </GridPanel>
    </FormPage>
  </LockedItems>
</control>
