<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
	<Column>

		<Border ID="$ID" Click="$Click" DblClick="$DblClick" Background='${MainUtil.GetString($Background, "transparent")}' Padding="5px 5px 5px 5px">
			<Border GridPanel.Width="100%" GridPanel.Style="padding:5px 5px 5px 5px">
				<b>
					<Literal Text="$Header"/>
				</b>
				<br/>
				<Literal Text="$Name"/>
			</Border>
		</Border>

	</Column>
</control>
